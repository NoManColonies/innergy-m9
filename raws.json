db.createCollection("raws",
{
   validator: {
      $jsonSchema: {
         bsonType: "object",
         required: [
        "value",
        "timestamp"
      ],
      properties: {
        value: {
          bsonType: [
            "string",
            "int",
            "double"
          ]
        },
        timestamp: {
          bsonType: "string"
        }
      }
    }
  }
})
